{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Midnight: Setup Environment",
      "type": "shell",
      "command": "bash .vscode/setup-midnight.sh",
      "problemMatcher": [],
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Midnight: Start Proof Server",
      "type": "shell",
      "command": "docker run -p 6300:6300 --rm midnightnetwork/proof-server midnight-proof-server --network testnet",
      "problemMatcher": [],
      "isBackground": true,
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Midnight: Pull Proof Server Image",
      "type": "shell",
      "command": "docker pull midnightnetwork/proof-server",
      "problemMatcher": [],
      "group": "none"
    },
    {
      "label": "Midnight: Check Proof Server Health",
      "type": "shell",
      "command": "curl -s http://localhost:6300/health || echo 'Proof server not running'",
      "problemMatcher": [],
      "group": "none"
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "rm -rf node_modules/.cache dist .next coverage playwright-report",
      "problemMatcher": [],
      "group": "none"
    },
    {
      "label": "install",
      "type": "shell",
      "command": "pnpm install",
      "problemMatcher": [],
      "group": "none"
    },
    {
      "label": "lint:md",
      "type": "shell",
      "command": "pnpm lint:md",
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "lint:md:fix",
      "type": "shell",
      "command": "pnpm lint:md:fix",
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "lint:md:all",
      "type": "shell",
      "command": "pnpm lint:md:all",
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "lint:md:all:fix",
      "type": "shell",
      "command": "pnpm lint:md:all:fix",
      "problemMatcher": [],
      "group": "test"
    }
  ]
}
